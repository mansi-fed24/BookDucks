{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Book"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "pages": {
      "type": "integer",
      "required": true
    },
    "release_date": {
      "type": "date",
      "required": true
    },
    "cover_image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "average_rating": {
      "type": "decimal",
      "max": 10,
      "min": 1
    },
    "ratings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::rating.rating",
      "mappedBy": "book"
    },
    "users": {
    "type": "relation",
    "relation": "manyToMany",
    "target": "plugin::users-permissions.user",
    "mappedBy": "toRead"
    }
  }
}
